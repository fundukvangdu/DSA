// Title= Create display database and supply searching sorting methods
// Using C++


#include <iostream>
#include <string>
using namespace std;

typedef struct student
{
    int roll_num;
    string name;
    float marks;
} stud;

void create(stud s[20], int n);
void display(stud s[20], int n);
void search(stud s[20], int n, int key);
void bubble_sort(stud s[20], int n);
void selectionSort(stud s[20], int n);

int main()
{
    stud s[20];
    int ch, n, key;

    do
    {
        cout << "\n 1) Create Student Database";
        cout << "\n 2) Display Student Records";
        cout << "\n 3) Linear Search";
        cout << "\n 4) Bubble Sort by Roll Number";
        cout << "\n 5) Selection Sort by Marks";
        cout << "\n 6) Exit";
        cout << "\n Enter Your Choice: ";
        cin >> ch;

        switch (ch)
        {
        case 1:
            cout << "\n Enter the Number of Records: ";
            cin >> n;
            create(s, n);
            break;

        case 2:
            display(s, n);
            break;

        case 3:
            cout << "\n Enter the roll number which you want to search: ";
            cin >> key;
            search(s, n, key);
            break;

        case 4:
            bubble_sort(s, n);
            break;

        case 5:
            selectionSort(s, n);
            break;

        case 6:
            return 0;

        default:
            cout << "\n Invalid choice" << endl;
        }
    } while (ch != 6);
}

void create(stud s[20], int n)
{
    for (int i = 0; i < n; i++)
    {
        cout << "\n Enter the roll number: ";
        cin >> s[i].roll_num;
        cin.ignore();
        cout << " Enter the Name: ";
        getline(cin, s[i].name);
        cout << " Enter the marks: ";
        cin >> s[i].marks;
    }
}

void display(stud s[20], int n)
{
    cout << "\n\tRoll No\t\tName\t\tMarks";
    for (int i = 0; i < n; i++)
    {
        cout << "\n\t" << s[i].roll_num << "\t\t" << s[i].name << "\t\t" << s[i].marks;
    }
}

void search(stud s[20], int n, int key)
{
    cout << "\n\tRoll No\t\tName\t\tMarks";
    for (int i = 0; i < n; i++)
    {
        if (key == s[i].roll_num)
        {
            cout << "\n\t" << s[i].roll_num << "\t\t" << s[i].name << "\t\t" << s[i].marks;
        }
    }
}

void bubble_sort(stud s[20], int n)
{
    stud temp;
    for (int i = 0; i < n - 1; i++)
    {
        for (int j = 0; j < n - i - 1; j++)
        {
            if (s[j].roll_num > s[j + 1].roll_num)
            {
                temp = s[j];
                s[j] = s[j + 1];
                s[j + 1] = temp;
            }
        }
    }
    cout << "\nRecords sorted by Roll Number (Bubble Sort).\n";
}

void selectionSort(stud s[20], int n)
{
    stud temp;
    for (int i = 0; i < n - 1; i++)
    {
        int minIdx = i;
        for (int j = i + 1; j < n; j++)
        {
            if (s[j].marks < s[minIdx].marks)
                minIdx = j;
        }
        temp = s[i];
        s[i] = s[minIdx];
        s[minIdx] = temp;
    }
    cout << "\nRecords sorted by Marks (Selection Sort).\n";
}
